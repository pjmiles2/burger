<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 text-center">Eat the burger</h1>
  </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 text-center">
            <h2>burgers you can eat</h2>
            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{this.id}}. {{this.burger_name}}
	                <button class="devour-burger" data-id="{{this.id}}" data-devoured="{{"0"}}">Eat Me!</button>
                {{/unless}}
                </li>
            {{/each}}
            </ul>
        </div>

        <div class="col-md-6 text-center">
            <h2>Burgers you ate!</h2>
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{this.id}}. {{this.burger_name}}
                {{/if}}
                </li>
            {{/each}}
            </ul>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>Add a Burger</h2>
                <form class="create-form">
                <div class="form-group">
                    <label for="addburger">Burger Type:</label>
                    <input type="text" id="addburger" name="name">
                </div>
                    <button type="submit">Add Burger</button>
                </form>
        </div>
    </div>
</div>    