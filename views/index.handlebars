  <div class="container">
    <h1 class="display-4 text-center">Eat the burger!</h1>
  </div>

<div class="container">
    <div class="row">

        <div class="col-md-4 border border-danger rounded text-center">

            <h2>Burgers You Can Eat!</h2>
            <ul class="uneaten list-group">
            {{#each burgers}}
                {{#unless devoured}}
                <li class="uneaten list-group-item">
                    {{this.id}}. {{this.burger_name}}
	                <button class="devour-burger btn btn-danger btn-sm"data-id="{{this.id}}" data-devoured="{{"0"}}">Eat Me!</button>
                {{/unless}}
                </li>
            {{/each}}
            </ul>
        </div>
        <div class="col-md-4 text-center">
            
            <img src="http://chadwicksnaturals.com/wp-content/uploads/2017/07/BaconCheeseburger.png" alt="Burger">
            <h2>Add a Burger</h2>
                <form class="create-form">
                <div class="form-group">
                    <label for="addburger">Burger Type:</label>
                    <input type="text" id="addburger" name="name">
                </div>
                    <button type="submit" class="btn btn-block btn-warning">Add Burger</button>
                </form>
        </div>

        <div class="col-md-4 border border-success rounded text-center">
            <h2>Burgers You Ate!</h2>
            <ul class="eaten list-group">   
            {{#each burgers}}
                {{#if devoured}}
                <li class="eaten list-group-item">
                    {{this.id}}. {{this.burger_name}}
                {{/if}}
                </li>
            {{/each}}
            </ul>
        </div>
    </div>
</div>


